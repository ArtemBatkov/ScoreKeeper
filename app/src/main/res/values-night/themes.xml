<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab_41" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Background" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:src">@drawable/main_bg_dark</item>
        <item name="android:alpha">0.65</item>
    </style>

    <style name="Theme.Scores" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/athletic</item>
        <item name="android:shadowRadius">0.001</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2.2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Buttons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/btn_dark </item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="Theme.Switch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">5.5</item>
        <item name="android:shadowDx">3.5</item>
        <item name="switchPadding">10dp</item>
    </style>



    <style name="Theme.RadioButtons" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/droid_serif</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>


</resources>